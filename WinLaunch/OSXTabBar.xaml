                                        <GradientStop Offset="0" Color="#FF747474" />
                                        <GradientStop Offset="0.866" Color="#FF9F9F9F" />
                                        <GradientStop Offset="0.155" Color="#FF888888" />
                                        <GradientStop Offset="1" Color="DarkGray" />
                                    </LinearGradientBrush>
